<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Space for alignment with other messages -->
    <View
        android:layout_width="32dp"
        android:layout_height="1dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/function_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/function_call_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Header with function name and expand icon -->
            <LinearLayout
                android:id="@+id/function_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/function_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="ðŸ”§"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/function_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/function_call_title" />

                <TextView
                    android:id="@+id/function_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/expand_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_expand_more"
                    app:tint="@color/function_call_icon" />

            </LinearLayout>

            <!-- Summary -->
            <TextView
                android:id="@+id/function_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/function_call_summary"
                android:layout_marginTop="4dp"
                android:layout_marginStart="24dp" />

            <!-- Expandable details -->
            <LinearLayout
                android:id="@+id/function_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <!-- Arguments -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arguments:"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/function_call_label" />

                <TextView
                    android:id="@+id/function_args"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:background="@color/code_background"
                    android:padding="6dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/function_call_code" />

                <!-- Result (shown only when available) -->
                <TextView
                    android:id="@+id/function_result_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result:"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/function_call_label"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/function_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:background="@color/code_background"
                    android:padding="6dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/function_call_code"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
