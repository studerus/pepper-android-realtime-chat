<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_overlay"
    android:layout_width="520dp"
    android:layout_height="wrap_content"
    android:layout_gravity="top|end"
    android:layout_margin="16dp"
    android:elevation="8dp"
    android:visibility="gone"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Dashboard Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ‘ï¸ Human Perception Dashboard"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/dashboard_close_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Close Dashboard"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Human Detection Table -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF8E1"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp">

            <!-- Count Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/human_count_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/robot_bubble"
                    android:padding="8dp"
                    android:minWidth="32dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Column Headers -->
            <LinearLayout
                android:id="@+id/human_detection_headers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="Picture"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Demographics"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Emotion"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Pleasure"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Excitement"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Smile"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Attention"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Engagement"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/humans_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp" />

            <TextView
                android:id="@+id/no_humans_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No humans detected"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center"
                android:padding="8dp"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Last Update Footer -->
        <TextView
            android:id="@+id/last_update_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last update: Never"
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
