<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apb/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@android:color/white">

    <!-- Single row layout matching the column headers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Face Picture - circular thumbnail -->
        <ImageView
            android:id="@+id/human_face_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/btn_dialog"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Human face picture" />

        <!-- Demographics - matches header width -->
        <TextView
            android:id="@+id/human_demographics"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="25y, â™‚ï¸"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="start|center_vertical" />

        <!-- Distance - matches header width -->
        <TextView
            android:id="@+id/human_distance"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="1.2m"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical" />

        <!-- Emotion - matches header width -->
        <TextView
            android:id="@+id/human_emotion"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š Joyful"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical" />

        <!-- Pleasure State - matches header width -->
        <TextView
            android:id="@+id/human_pleasure"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š Positive"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical" />

        <!-- Excitement State - matches header width -->
        <TextView
            android:id="@+id/human_excitement"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="âš¡ Excited"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical" />

        <!-- Smile State - matches header width -->
        <TextView
            android:id="@+id/human_smile"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š Genuine"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical" />

        <!-- Attention - flexible width -->
        <TextView
            android:id="@+id/human_attention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Focused"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical" />

        <!-- Engagement - matches header width -->
        <TextView
            android:id="@+id/human_engagement"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Engaged"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
