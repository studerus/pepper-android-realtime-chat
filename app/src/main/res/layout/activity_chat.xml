<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    tools:openDrawer="end">

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_500"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="PepperDialog"
            app:titleCentered="true"
            app:menu="@menu/chat_toolbar_menu" />
            
        <!-- Hidden status TextViews for internal state tracking -->
        <TextView
            android:id="@+id/mapStatusTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="ðŸ—ºï¸ Map: None"
            android:visibility="gone" />
            
        <TextView
            android:id="@+id/localizationStatusTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="ðŸ§­ Localization: Waiting"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topAppBar"
            android:layout_above="@+id/statusTextView"
            android:padding="8dp" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#DDDDDD"
            android:gravity="center"
            android:padding="16dp"
            android:text="Initializing..."
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_interrupt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/statusTextView"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="96dp"
            android:contentDescription="@string/interrupt_button_description"
            android:visibility="gone"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <!-- Warmup Indicator Overlay -->
        <LinearLayout
            android:id="@+id/warmup_indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:elevation="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ProgressBar
                android:id="@+id/warmup_spinner"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/warmup_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/status_please_wait"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- Perception Dashboard Overlay -->
        <include
            layout="@layout/perception_dashboard_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
            
        <!-- Map Preview Overlay -->
        <FrameLayout
            android:id="@+id/map_preview_container"
            android:layout_width="320dp"
            android:layout_height="240dp"
            android:layout_below="@id/topAppBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#A0333333"
            android:visibility="gone"
            tools:visibility="visible">

            <io.github.hrilab.pepper_realtime.ui.MapPreviewView
                android:id="@+id/map_preview_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <!-- Image Overlay -->
        <RelativeLayout
            android:id="@+id/image_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">
            
            <ImageView
                android:id="@+id/overlay_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="32dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />
                
            <TextView
                android:id="@+id/close_overlay_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:text="âœ• Tap to close"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="#80000000" />
                
        </RelativeLayout>

    </RelativeLayout>

    <!-- Settings Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/settings_header" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">
            <include layout="@layout/view_settings" />
        </ScrollView>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

