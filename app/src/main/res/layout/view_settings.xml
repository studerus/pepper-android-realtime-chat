<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Model Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Prompt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/system_prompt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g., You are a helpful assistant."
        android:inputType="textMultiLine"
        android:minLines="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Model"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/model_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="API Provider"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/api_provider_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Voice"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/voice_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Temperature"
        android:textStyle="bold" />
        
    <TextView
        android:id="@+id/temperature_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="1.0" />

    <SeekBar
        android:id="@+id/temperature_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="33"/>

    <!-- Recognizer Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/audio_input_mode_label"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/audio_input_mode_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/audio_input_modes" />

    <!-- Azure Speech Settings Container -->
    <LinearLayout
        android:id="@+id/azure_speech_settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/azure_speech_settings_header"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:attr/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Speech Language"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/language_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Silence Timeout (ms)"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/silence_timeout_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="500" />

        <SeekBar
            android:id="@+id/silence_timeout_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="2000"
            android:progress="500"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ASR Confidence Threshold"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/confidence_threshold_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="70%" />

        <SeekBar
            android:id="@+id/confidence_threshold_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="70"/>

    </LinearLayout>

    <!-- Realtime API Settings Container -->
    <LinearLayout
        android:id="@+id/realtime_api_settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_api_settings_header"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:attr/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/realtime_transcription_model_label"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/transcription_model_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/transcription_models" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_transcription_language_label"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/transcription_language_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/realtime_transcription_language_hint"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_transcription_prompt_label"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/transcription_prompt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/realtime_transcription_prompt_hint"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_turn_detection_label"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/turn_detection_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/turn_detection_types" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_vad_threshold_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vad_threshold_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0.50" />

        <SeekBar
            android:id="@+id/vad_threshold_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_prefix_padding_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prefix_padding_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="300 ms" />

        <SeekBar
            android:id="@+id/prefix_padding_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="300"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_silence_duration_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/silence_duration_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="500 ms" />

        <SeekBar
            android:id="@+id/silence_duration_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="200"
            android:max="2000"
            android:progress="500"/>

        <CheckBox
            android:id="@+id/interrupt_response_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_interrupt_response_label"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_idle_timeout_label"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/idle_timeout_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/realtime_idle_timeout_hint"
            android:inputType="number"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/realtime_noise_reduction_label"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/noise_reduction_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/noise_reduction_types" />

    </LinearLayout>

    <!-- App Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Volume"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/volume_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="100%" />

    <SeekBar
        android:id="@+id/volume_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="80"/>

    <!-- Function Calls Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Function Calls"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Select which tools the AI can use during conversations"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/function_calls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical" />

</LinearLayout>
