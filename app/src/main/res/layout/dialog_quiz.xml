<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/quiz_question_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Question text will go here."
        android:textSize="34sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quiz_option_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:minHeight="140dp"
            android:padding="16dp"
            android:text="Option 1"
            android:textSize="22sp"
            android:textStyle="normal"
            app:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/quiz_initial_bg"
            app:cornerRadius="16dp"
            app:strokeColor="@color/quiz_stroke"
            app:strokeWidth="2dp"
            app:rippleColor="@color/quiz_ripple" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quiz_option_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:minHeight="140dp"
            android:padding="16dp"
            android:text="Option 2"
            android:textSize="22sp"
            android:textStyle="normal"
            app:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/quiz_initial_bg"
            app:cornerRadius="16dp"
            app:strokeColor="@color/quiz_stroke"
            app:strokeWidth="2dp"
            app:rippleColor="@color/quiz_ripple" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quiz_option_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:minHeight="140dp"
            android:padding="16dp"
            android:text="Option 3"
            android:textSize="22sp"
            android:textStyle="normal"
            app:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/quiz_initial_bg"
            app:cornerRadius="16dp"
            app:strokeColor="@color/quiz_stroke"
            app:strokeWidth="2dp"
            app:rippleColor="@color/quiz_ripple" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quiz_option_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:minHeight="140dp"
            android:padding="16dp"
            android:text="Option 4"
            android:textSize="22sp"
            android:textStyle="normal"
            app:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/quiz_initial_bg"
            app:cornerRadius="16dp"
            app:strokeColor="@color/quiz_stroke"
            app:strokeWidth="2dp"
            app:rippleColor="@color/quiz_ripple" />

    </GridLayout>

</LinearLayout>
